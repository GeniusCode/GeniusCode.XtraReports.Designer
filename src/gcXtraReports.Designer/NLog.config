<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      throwExceptions="true">
  <extensions>
    <add assembly="gcXtraReports.Designer" />
  </extensions>


  <!-- Destination -->
  <targets>
    <target name="easyTarget" type="MessagePublishingTarget" />
    <target name="logfile" xsi:type="File" fileName="${basedir}\applicationLog.txt" layout="${longdate} ${message} ${exception:format=tostring}"/>
  </targets>

  <!-- Source -->
  <rules>
    <logger name="*" minlevel="Info" writeTo="logfile" />
    <logger name="*" minlevel="Trace" writeTo="easyTarget" />
  </rules>
  
</nlog>